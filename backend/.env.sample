# Database
# DATABASE_URL should point to your PostgreSQL instance
DATABASE_URL="postgresql://user:password@localhost:5432/hydroline?schema=public&connection_limit=20&pool_timeout=30"

# BetterAuth Configuration
BETTER_AUTH_SECRET="replace-with-a-long-random-secret"
BETTER_AUTH_URL="http://localhost:3000"

# JWT Configuration
JWT_SECRET="replace-with-another-long-random-secret"

# Public base URL for generating absolute asset links
APP_PUBLIC_BASE_URL="http://localhost:3000"

# Attachments storage directory (absolute or relative to backend/). Defaults to
# ../uploads which resolves to <project-root>/uploads in development.
ATTACHMENTS_DIR="../uploads"

# SMTP configuration for sending emails (required for verification/password reset)
SMTP_HOST="smtp.example.com"
SMTP_PORT="465"              # 465 for SMTPS, 587 for STARTTLS
SMTP_USER="no-reply@example.com"
SMTP_PASS="your-smtp-password"
SMTP_SECURE="true"           # true for SMTPS/465, false otherwise
MAIL_FROM="Hydroline <no-reply@example.com>"

# Optional: OAuth Providers
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""

GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

MICROSOFT_OAUTH_TENANT_ID="common"
MICROSOFT_OAUTH_CLIENT_ID=""
MICROSOFT_OAUTH_CLIENT_SECRET=""
MICROSOFT_OAUTH_REDIRECT_URI="http://localhost:3000/oauth/providers/microsoft/callback"

# Optional: Default admin bootstrap password (used only on first run)
DEFAULT_ADMIN_PASSWORD="admin123456"

# Redis Configuration
# Set REDIS_ENABLED=false to disable Redis and use in-memory cache instead (development only)
REDIS_ENABLED="true"
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD=""            # Leave empty if no password is set
REDIS_DB="0"                 # Database number (0-15)
REDIS_TTL="3600000"          # Default TTL in milliseconds (1 hour)
